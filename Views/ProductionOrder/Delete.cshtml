@model SeafoodApp.Models.ViewModels.ProductionOrderViewModel

@{
    ViewData["Title"] = "Xóa Lệnh sản xuất";
}

<h1>Xóa Lệnh sản xuất</h1>

<h3>Bạn có chắc muốn xóa lệnh sản xuất này?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Số lệnh</dt>
        <dd class="col-sm-10">@Model.ProductionOrderNumber</dd>
        <dt class="col-sm-2">Số hợp đồng</dt>
        <dd class="col-sm-10">@Model.ContractNumber</dd>
        <dt class="col-sm-2">Khách hàng</dt>
        <dd class="col-sm-10">@Model.CustomerName</dd>
        <dt class="col-sm-2">Ngày cung cấp bao bì</dt>
        <dd class="col-sm-10">@Model.PackagingSupplyDate.ToString("dd/MM/yyyy")</dd>
        <dt class="col-sm-2">Ngày hoàn thành</dt>
        <dd class="col-sm-10">@Model.CompletionDate.ToString("dd/MM/yyyy")</dd>
        <dt class="col-sm-2">Trạng thái</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>