@model SeafoodApp.Models.Entities.ProcessingStage

@{
    ViewData["Title"] = "Xóa Công đoạn chế biến";
}

<h1>Xóa Công đoạn chế biến</h1>

<h3>Bạn có chắc muốn xóa công đoạn này?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Tên công đoạn</dt>
        <dd class="col-sm-10">@Model.StageName</dd>
        <dt class="col-sm-2">Mô tả</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Nguyên liệu đầu vào</dt>
        <dd class="col-sm-10">@Model.InputMaterial</dd>
        <dt class="col-sm-2">Sản phẩm đầu ra</dt>
        <dd class="col-sm-10">@Model.OutputProduct</dd>
        <dt class="col-sm-2">Định mức</dt>
        <dd class="col-sm-10">@Model.StandardRate kg/người/giờ</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>