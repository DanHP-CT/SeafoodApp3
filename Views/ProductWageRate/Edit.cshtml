@model SeafoodApp.Models.Entities.ProductWageRate

@{
    ViewData["Title"] = "Sửa Đơn giá lương sản phẩm";
}

<h1>Sửa Đơn giá lương sản phẩm</h1>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="ProcessingStageId" class="control-label"></label>
        <select asp-for="ProcessingStageId" class="form-control" asp-items="@(new SelectList(ViewBag.ProcessingStages, "Id", "StageName"))"></select>
        <span asp-validation-for="ProcessingStageId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WageRate" class="control-label"></label>
        <input asp-for="WageRate" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="WageRate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}