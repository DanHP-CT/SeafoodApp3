@model IEnumerable<SeafoodApp.Models.Entities.ProductWageRate>

@{
    ViewData["Title"] = "Danh sách Đơn giá lương sản phẩm";
}

<h1>Danh sách Đơn giá lương sản phẩm</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm mới</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Công đoạn</th>
            <th>Đơn giá lương (VND/kg)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProcessingStage.StageName</td>
                <td>@item.WageRate</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>