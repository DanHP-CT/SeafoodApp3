@model SeafoodApp.Models.ViewModels.InventoryViewModel

@{
    ViewData["Title"] = "Xóa Kho lạnh";
}

<h1>Xóa Kho lạnh</h1>

<h3>Bạn có chắc muốn xóa mục này?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Mã lô</dt>
        <dd class="col-sm-10">@Model.LotNumber</dd>
        <dt class="col-sm-2">Tên sản phẩm</dt>
        <dd class="col-sm-10">@Model.ProductName</dd>
        <dt class="col-sm-2">Loại</dt>
        <dd class="col-sm-10">@Model.ProductType</dd>
        <dt class="col-sm-2">Size</dt>
        <dd class="col-sm-10">@Model.Size</dd>
        <dt class="col-sm-2">Tồn kho</dt>
        <dd class="col-sm-10">@Model.StockQuantity kg</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>